<config xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
    <authgroups>
      <group>
        <name>NSO_Devices</name>
        <default-map>
          <remote-name>admin</remote-name>
          <remote-password>admin</remote-password>
        </default-map>
      </group>
    </authgroups>
    <device>
      <name>xe1</name>
      <address>{{hostvars['xe1'].ansible_host}}</address>
      <authgroup>NSO_Devices</authgroup>
      <device-type>
        <cli>
          <ned-id>{{nso_xe_ned_id}}</ned-id>
        </cli>
      </device-type>
      <state>
        <admin-state>unlocked</admin-state>
      </state>
    </device>
  </devices>
</config>
